<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:WpfApp2.View"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Height="450" 
        Width="800">
    <Window.Resources>
        <!-- MainWindow 안에서만 적용되는 코드 영역-->
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tb_userbox1" Grid.Column="0" Grid.Row="1" Text=""/>
        <Button Name="testButton" Grid.Column="0" Grid.Row="0" Foreground="Blue" Content="이것은 콤보박스이다."/>
        <view:GreenPage Grid.Column="0" Grid.Row="2" />
        <Button Name="SecondButton" Style="{DynamicResource YellowButtonStyle}" Grid.Column="0" Grid.Row="3"/>
    </Grid>
</Window>
